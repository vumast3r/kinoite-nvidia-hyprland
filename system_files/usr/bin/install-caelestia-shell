#!/usr/bin/env bash
set -euo pipefail

SRC="/usr/share/quickshell/caelestia"
DST="${HOME}/.config/quickshell/caelestia"

mkdir -p "${HOME}/.config/quickshell"

if [[ ! -d "${SRC}" ]]; then
  echo "Missing ${SRC} (Caelestia not embedded in this image)."
  exit 1
fi

if [[ -e "${DST}" ]]; then
  echo "Refusing to overwrite existing: ${DST}"
  echo "Move it aside if you want a fresh install."
  exit 1
fi

ln -s "${SRC}" "${DST}"
echo "Installed Caelestia Shell â†’ ${DST}"
echo "Run: qs -c caelestia"
